<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.robert.myapplication1">
    <uses-feature android:name="android.hardware.camera2"
        android:required="true"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.CALL_PHONE"
        tools:ignore="ProtectedPermissions"  />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>



    <application
        android:name=".SdaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"/>
        <activity android:name=".SecondActivity"/>
        <activity android:name=".CameraActivity"/>
        <activity android:name=".Scroll"/>
        <activity android:name=".Constraint"/>
        <activity android:name=".Linear"/>
        <activity android:name=".Relative"/>
        <activity android:name=".Snow"
            android:parentActivityName=".StartActivity"/>
        <activity android:name=".Weather"/>
        <activity android:name=".Call"/>
        <activity android:name=".Call2"/>
        <activity android:name=".WebViewActivity1"/>
        <activity android:name=".WebViewActivity2"/>
        <activity android:name=".EmailActivity"/>
        <activity android:name=".LifeTimeActivity"/>
        <activity android:name=".MenuActivity"/>
        <activity android:name=".ButterKnifeActivity"/>
        <activity android:name=".FragmentActivity"/>
        <activity android:name=".FragmentDynamicActivity"/>
        <activity android:name=".BroadcastActivity"/>
        <activity android:name=".BroadcastBootAvtivity"/>
        <activity android:name=".BroadcastInAppActivity"/>
        <activity android:name=".BroadcastRegAppActivity"/>
        <activity android:name=".NotificationActivity"/>
        <activity android:name=".ServiceActivity"/>
        <activity android:name=".DownloadActivity"/>
        <activity android:name=".ForegroundActivity"/>

        <service android:name="services.FirstIntentService"/>
        <service android:name=".SecondIntentService" />
        <service android:name="services.ForegroundService" />

        <receiver android:name=".MyBroadcastReceiver" android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE"/>
                <action android:name="android.intent.action.SCREEN_ON"/>
            </intent-filter>

        </receiver>

        <receiver android:name=".MyBroadcastAppReceiver" android:exported="true">

            <intent-filter>
                <action android:name="SENDING"/>
            </intent-filter>

        </receiver>


        <receiver android:name=".MyBroadcastReceiverOnBoot" android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>

        </receiver>

        <receiver android:name=".MyBroadcastReceiverAfterTime" android:exported="true">

            <intent-filter>
                <action android:name="OPEN_AFTER_10_SECONDS"/>
            </intent-filter>

        </receiver>




        <activity android:name=".StartActivity">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        </activity>


    </application>

</manifest>