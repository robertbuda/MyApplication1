<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewToCamera"
        android:layout_width="100dp"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/buttonToFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Make Foto" />

    <Button
        android:id="@+id/buttonShowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Show Foto"
        android:layout_below="@id/buttonToFoto"/>

    <ImageView
        android:id="@+id/imageFromMemory"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@id/buttonShowImage"
        />


</RelativeLayout>