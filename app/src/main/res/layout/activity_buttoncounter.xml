<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="0"
        android:id="@+id/textButtonCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="+1"
        app:layout_constraintTop_toBottomOf="@id/textButtonCounter"
        android:id="@+id/buttonPlusCounter"
        android:textSize="20sp"
        android:padding="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="-1"
        app:layout_constraintTop_toBottomOf="@id/buttonPlusCounter"
        android:id="@+id/buttonMinusCounter"
        android:textSize="20sp"
        android:padding="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>