<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        />

    <TextView
        android:text="Login"
        app:layout_constraintLeft_toLeftOf="@id/imageLogo"
        app:layout_constraintTop_toBottomOf="@id/imageLogo"
        android:id="@+id/textLogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />

    <EditText
        app:layout_constraintLeft_toLeftOf="@id/textLogin"
        app:layout_constraintTop_toBottomOf="@id/textLogin"
        android:id="@+id/Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="16dp"
        android:text="Password"
        app:layout_constraintLeft_toLeftOf="@id/Login"
        app:layout_constraintTop_toBottomOf="@id/Login"
        android:id="@+id/textPassword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />

    <EditText
        app:layout_constraintLeft_toLeftOf="@id/textPassword"
        app:layout_constraintTop_toBottomOf="@id/textPassword"
        android:id="@+id/Password"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="20sp"
        android:text="LOGIN"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@id/Password"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:id="@+id/buttonPlaceViever"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />




</android.support.constraint.ConstraintLayout>